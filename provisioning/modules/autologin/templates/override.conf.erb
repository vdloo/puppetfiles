[Service]
ExecStart=
<% case @operatingsystem
when "Ubuntu" %>
ExecStart=-/sbin/agetty --autologin <%= scope.function_hiera(['nonroot_username']) %> --noclear %I $TERM
<% else %>
ExecStart=-/usr/bin/agetty --autologin <%= scope.function_hiera(['nonroot_username']) %> --noclear %I $TERM
<% end %>
Type=simple
